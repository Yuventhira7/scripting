#!/bin/bash


# Check the number of arguments
if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
  usage
fi

input_file="$1" # input file
output_file="${2:-preprocessed.tsv}"  # Use provided output file or default to preprocessed.tsv

# create a temporary file to save 
cleaned=$(mktemp)

#  read input file and prprocess 
cat "$input_file" \
  | tr -d '\r' \
  | sed 's/,/\./g' \
  | sed 's/;/\t/g' \
  | tr -dc '[:print:][:cntrl:]' \
  > "$cleaned"

# find the maximum existing ID in the cleaned data
max_id=$(awk -F"\t" '
  NR > 1 {
    gsub(/^[ \t]+|[ \t]+$/, "", $1); # Trim whitespace from ID
    if ($1 ~ /^[0-9]+$/ && $1 > max) {
      max = $1
    }
  }
  END { print max + 0 } # Ensure numeric output, handle empty input
' "$cleaned")

# prprocesss the cleaned data 
awk -v max_id="$max_id" '
  BEGIN { FS = OFS = "\t"; id = max_id + 1 }
  NR == 1 { print; next }
  {
    gsub(/^[ \t]+|[ \t]+$/, "", $1); # Trim whitespace from ID
    if ($1 == "") {
      $1 = id++
    }
    print
  }
' "$cleaned" > "$output_file"

# Clean up the temporary file 
rm "$cleaned"

echo "Preprocessed data saved to $output_file"
